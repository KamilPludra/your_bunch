<% provide(:title, "Edycja użytkownika") %>
<h1>Zaktualizuj swój profil</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, "Imię i nazwisko" %>
        <%= f.text_field :name %>

        <%= f.label :email, "Twój adres e-mail" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Nowe hasło" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Wprowadź ponownie hasło" %>
        <%= f.password_field :password_confirmation %>
        <br>
        <%= f.submit "Zapisz zmiany", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Zmień obraz</a>
  </div>
</div>