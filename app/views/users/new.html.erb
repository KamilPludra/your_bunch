<% provide(:title, 'Zarejestruj się') %>
<h1>Zarejestruj się</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Imię i nazwisko" %>
        <%= f.text_field :name %>

        <%= f.label :email, "Twój adres e-mail" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Hasło" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Wprowadź ponownie hasło" %>
        <%= f.password_field :password_confirmation %>
        <br>
        <%= f.submit "Utwórz konto", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>